@page

@using ElleChristine.Web.Pages

@model ShowsModel

@{
    ViewData["Title"] = "Shows - Elle Christine";
}

<partial name="Partials/Shows/_PageTitle" />


<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-11 col-lg-10">
                <div class="row">

                    @foreach (var show in Model.Shows.Where(s => s.Date > DateOnly.FromDateTime(DateTime.Today)))
                    {
                        <partial name="Partials/Shows/_Show" model="show" />
                    }

                </div>
            </div>
        </div>
    </div>
</section>

<div class="my-5"></div>

